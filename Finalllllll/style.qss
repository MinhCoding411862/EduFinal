/* Dark mode styles for survey form */

#surveyWidget {
    background-color: #1E1E1E;
    border-radius: 10px;
    padding: 20px;
}

#surveyWidget QLabel {
    color: #FFFFFF;
    font-size: 16px;
    margin-bottom: 5px;
}

#weight1, #height1, #activitycombo, #goalcombo, #dietarycombo {
    background-color: #2D2D2D;
    border: 1px solid #3D3D3D;
    border-radius: 5px;
    color: #FFFFFF;
    padding: 8px;
    font-size: 14px;
}

#weight1:focus, #height1:focus, #activitycombo:focus, #goalcombo:focus, #dietarycombo:focus {
    border: 1px solid  #4CAF50;
}


#activitycombo::drop-down, #goalcombo::drop-down, #dietarycombo::drop-down {
    border: none;
    background-color: #3D3D3D;
    width: 30px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

#activitycombo::down-arrow, #goalcombo::down-arrow, #dietarycombo::down-arrow {
    image: url("C:\Users\ADMIN\Downloads\hackathon4.0\dropdown.png");
}

#submitbutton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #6C5CE7, stop:1 #A29BFE);
    border: none;
    border-radius: 15px;
    color: #FFFFFF;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
}

#submitbutton:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #5A4ED1, stop:1 #8B84E0);
}

/* Styles for instruction labels */
#weightLabel, #heightLabel, #genderLabel, #activityLabel, #goalLabel, #intensityLabel {
    font-size: 14px;
    font-style: italic;
    margin-top: 10px;
    margin-bottom: 2px;
    background-color: transparent;
}

#inputContainer {
    background-color: white;
    border: 1px solid #E5E5E5;
    border-radius: 8px;
    min-height: 40px;
    max-height: 40px;
}

#askAI {
    border: none;
    padding: 8px 12px;
    font-size: 14px;
    background: transparent;
}

#askAI:focus {
    outline: none;
}

#sendButton {
    background-color: transparent;
    border: none;
    padding: 8px 12px;
    font-size: 14px;
    font-weight: bold;
    color: #5A5A5A;
}

#sendButton:hover {
    color: #2D2D2D;
}

#sendButton:pressed {
    color: #1A1A1A;
}

#activityButtonGroup QRadioButton::indicator, 
#genderButtonGroup QRadioButton::indicator, 
#goalButtonGroup QRadioButton::indicator {
        width: 18px;
        height: 18px;
        border-radius: 9px;
        border: 2px solid #3D3D3D;
    }

#surveyWidget #activityButtonGroup QRadioButton::indicator:checked, 
#surveyWidget #genderButtonGroup QRadioButton::indicator:checked, 
#surveyWidget #goalButtonGroup QRadioButton::indicator:checked {
    background-color: #4CAF50;
    border: 2px solid #4CAF50;
}

#activityButtonGroup QRadioButton, 
#genderButtonGroup QRadioButton, 
#goalButtonGroup QRadioButton {
        color: #FFFFFF;
        font-size: 14px;
        background-color: transparent;
        spacing: 5px;
    }