/* style.qss - Dark Theme */

QMainWindow, QWidget {
    background-color: #1e1e1e;
    color: white;
    font-family: Arial, sans-serif;
}

QDialog {
    background-color: #2d2d2d;
    color: white;
}

QTabWidget::pane {
    border: none;
    background-color: #2d2d2d;
    border-radius: 15px;
}

QTabBar::tab {
    background-color: #3d3d3d;
    color: white;
    padding: 10px 20px;
    margin-right: 5px;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
}

QTabBar::tab:selected {
    background-color: #4CAF50;
    color: white;
}

QPushButton {
    background-color: #2196F3;  /* Blue background */
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 14px;
}

QPushButton:hover {
    background-color: #1976D2;  /* Darker blue on hover */
}

QLabel {
    color: white;
    font-size: 14px;
}

QListWidget {
    background-color: #2d2d2d;
    color: white;
    border: none;
    border-radius: 10px;
    padding: 10px;
}

QListWidget::item:selected {
    background-color: #4CAF50;
    border-radius: 5px;
}

QFrame {
    background-color: #2d2d2d;
    border-radius: 15px;
}

QLineEdit, QComboBox, QTextEdit {
    background-color: #3d3d3d;
    border: 1px solid #555555;
    border-radius: 4px;
    color: white;
    padding: 5px;
    font-size: 14px;
}

QScrollArea {
    background-color: #1e1e1e;
    border: none;
}

QScrollBar:vertical {
    border: none;
    background-color: #2d2d2d;
    width: 10px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background-color: #3d3d3d;
    min-height: 20px;
    border-radius: 5px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

/* Custom Widget Styles, I delete this code background-color: #2d2d2d; */
#surveyWidget, #chatWidget {
    border-radius: 15px;
    padding: 20px;
}
QListWidget {
    background-color: #F0F0F0;
    border: none;
}

QListWidget::item {
    background-color: transparent;
    padding: 5px;
}

ChatBubble {
    font-size: 14px;
    line-height: 1.4;
}
#exerciseInfoFrame {
    background-color: #2d2d2d;
    border-radius: 15px;
    padding: 10px;
}

#exerciseNameLabel {
    color: #4CAF50;
    font-size: 18px;
    font-weight: bold;
}

#repCountLabel, #feedbackLabel {
    color: white;
    font-size: 16px;
}

/* Home Tab Styles */
